<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zeevel.o2o.dao.WechatAuthDao">
    <resultMap id="wechatAuthResultMap" type="com.zeevel.o2o.entity.WechatAuth">
        <id column="wechat_auth_id" property="wechatAuthId"/>
        <result column="open_id" property="openId"/>
        <result column="w_create_time" property="createTime"/>
        <association property="personInfo" javaType="com.zeevel.o2o.entity.PersonInfo">
            <id column="w_user_id" property="userId"/>
            <result column="name" property="name"/>
            <result column="profile_img" property="profileImg"/>
            <result column="email" property="email"/>
            <result column="gender" property="gender"/>
            <result column="enable_status" property="enableStatus"/>
            <result column="user_type" property="userType"/>
            <result column="p_create_time" property="createTime"/>
            <result column="last_edit_time" property="lastEditTime"/>
        </association>
    </resultMap>
    <select id="queryWechatInfoByOpenId" parameterType="String" resultMap="wechatAuthResultMap">
        SELECT
        w.wechat_auth_id,
        w.user_id as w_user_id,
        w.open_id,
        w.create_time as w_create_time,
        p.user_id as p_user_id,
        p.name,
        p.profile_img,
        p.email,
        p.gender,
        p.enable_status,
        p.user_type,
        p.create_time as p_create_time,
        p.last_edit_time
        FROM
        tb_wechat_auth w
        LEFT JOIN tb_person_info p ON w.user_id = p.user_id
        WHERE
        w.open_id = #{openId}
    </select>
    <insert id="insertWechatAuth" parameterType="com.zeevel.o2o.entity.WechatAuth"
            useGeneratedKeys="true" keyProperty="wechatAuthId" keyColumn="wechat_auth_id">
        INSERT
        INTO
        tb_wechat_auth(user_id,open_id,create_time)
        values
        (#{personInfo.userId},#{openId},#{createTime})
    </insert>
</mapper>